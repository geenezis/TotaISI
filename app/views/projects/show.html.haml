.container-fluid.content-container.bg-grey
  .project-header
    .row
      .col-md-6
        .project-title
          %h1= @project.name
      .col-md-6.text-right
        .project-actions
          .btn-group.btn-group-lg{"aria-label" => "...", :role => "group"}
            = link_to "Add task", new_project_task_path(@project), class: 'btn btn-default'
            = link_to "Contributors", contributors_project_path(@project), class: 'btn btn-default'
            - if @relation.association_type_vo == "manager"
              = link_to "Edit", edit_project_path(@project), class: 'btn btn-default' 
              = link_to "Delete", project_path(@project), method: :delete, data: { confirm: 'Are you sure you want to delete project?' }, class: 'btn btn-danger'
            - else
              = link_to "Leave", leave_project_path(@project), method: :delete, data: { confirm: 'Are you sure you want to delete project?' }, class: 'btn btn-danger'
  .project-content
    .row
      .col-md-4
        .panel.panel-default.text-center
          .panel-heading
            %h3 To do
          .panel-body.task-list
            %ul.list-group
              = render :partial => "tasks/task", :collection => @to_do, :as => :t
          .panel-footer
      .col-md-4
        .panel.panel-default.text-center
          .panel-heading
            %h3 In progress
          .panel-body.task-list
            %ul.list-group
              = render :partial => "tasks/task", :collection => @in_progress, :as => :t
          .panel-footer
      .col-md-4
        .panel.panel-default.text-center
          .panel-heading
            %h3 Done
          .panel-body.task-list
            %ul.list-group
              = render :partial => "tasks/task", :collection => @done, :as => :t
          .panel-footer