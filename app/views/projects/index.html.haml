.container-fluid.content-container.bg-grey
  .projects
    %h2.text-center.mt-80 PROJECTS YOU MANAGE
    %ul.list-group.mt-50
      - if @managed_projects.empty?
        %p.text-center You do not manage any projects.
      - else
        - @managed_projects.each do |p|
          %li.list-group-item.row
            .col-md-10
              %h4= link_to p.name, project_path(p)
            .col-md-2.mt-10.text-right
              = link_to edit_project_path(p) do
                %i.glyphicon.glyphicon-cog.mr-15
              = link_to project_path(p), method: :delete, data: { confirm: 'Are you sure you want to delete project?' } do
                %i.glyphicon.glyphicon-remove.mr-15
    %h2.text-center.mt-80 PROJECTS YOU CONTRIBUTE TO
    %ul.list-group.mt-50
      - if @contributions.empty?
        %p.text-center You are not contributing to any projects.
      - else 
        - @contributions.each do |p|
          %li.list-group-item.row
            .col-md-10
              %h4= link_to p.name, project_path(p)
            .col-md-2.mt-10.text-right
              = link_to leave_project_path(p), method: :delete, data: { confirm: 'Are you sure you want to leave project?' } do
                %i.glyphicon.glyphicon-remove.mr-15
  .round-button
    .round-button-circle
      = link_to new_project_path do
        .round-button
          %span.glyphicon.glyphicon-plus
          