.container-fluid.content-container.bg-grey
  .task-container
    .row
      .col-md-9
        .well.well-sm.well-white
          %h4.ml-10= @task.title
      .col-md-3.text-right
        .btn-group.btn-group-lg{"aria-label" => "...", :role => "group"}
          = link_to "Edit", edit_project_task_path(@task.project, @task), class: 'btn btn-default btn-task'
          = link_to "Delete", project_task_path(@task.project, @task), method: :delete, data: { confirm: 'Are you sure you want to delete task?' }, class: 'btn btn-danger btn-task'
    .row
      .col-md-12
        .well.well-white.task-description
          %p= @task.description
    .row
      .col-md-7.text-right.mt-10
        %b Status:
      .col-md-5
        .well.well-sm.well-white
          = @task.status
    .row
      .col-md-7.text-right.mt-10
        %b Priority:
      .col-md-5
        .well.well-sm.well-white
          = @task.priority
    .row
      .col-md-7.text-right.mt-10
        %b Estimation:
      .col-md-5
        .well.well-sm.well-white
          - if @task.estimation.nil?
            = "0"
          - else
            = @task.estimation
    .row
      .col-md-7.text-right.mt-10
        %b User:
      .col-md-5
        .well.well-sm.well-white
          - if @task.user.nil?
            = "Not assigned"
          - else
            = @task.user.email
  .comments-container
    %h2.text-center.mb-50 COMMENTS
    = simple_form_for @comment, :url => comments_path, :method => 'post' do |f|
      .form-inputs
        = f.input :content, required: true, autofocus: true
        = f.hidden_field :task_id, value: @task.id
        = f.hidden_field :user_id, value: current_user.id
      .form-actions
        = f.button :submit, "Add comment", class: "btn-primary btn-lg btn-form"
    .mt-50
      - @comments.each do |c|
        .row
          .well.well-white
            %b= "#{c.user}"
            = " commented on "
            = "#{c.created_at.strftime('%m-%e-%y %H:%M')}:"
            %br
            .mt-10= c.content

